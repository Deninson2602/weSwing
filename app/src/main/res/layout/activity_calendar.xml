<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFondoActivity"
    tools:context=".calendar">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/btnColor">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_note_24"
                android:background="@color/btnColor"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MOGUDES"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/change_color_btn"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginRight="1dp"
                    android:text="Tots" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:background="@drawable/change_color_btn"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginRight="1dp"
                    android:text="D'amics" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:background="@drawable/change_color_btn"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="AssistirÃ©" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <LinearLayout
                android:id="@+id/filtrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fcf8f0"
                android:layout_marginBottom="10dp"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Filtrar"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:layout_marginLeft="10dp"
                        android:textSize="24sp"
                        android:layout_marginVertical="4dp"
                        android:textColor="#262626"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Espanya, Madrid"
                        android:padding="3dp"
                        android:clickable="false"
                        android:layout_marginLeft="10dp"
                        android:textSize="22sp"
                        android:layout_marginVertical="4dp"
                        android:textColor="#ababaa"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="45dp"
                    android:clickable="false"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/action_go"
                        android:layout_width="45dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:clickable="false"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:padding="8dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/assistents_recycler"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="#e7e2d7">

        <ImageView
            android:id="@+id/btnHour"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/baseline_access_time_24"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnNewspaper"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/baseline_newspaper_24"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnStar"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/baseline_star_outline_24"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnCalendar"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/baseline_calendar_today_24"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/baseline_search_24"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btnChat"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/baseline_chat_bubble_outline_24"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>